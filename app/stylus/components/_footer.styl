.footer
	width 100%
	min-width $min-width
	order 3
	background: #A5C8C9
	padding: 120px 0 120px 0
	position relative
	z-index 10
	&__title
		font-weight: 700;
		font-size: 65px;
		line-height: 65px;
		text-align: center;
		letter-spacing: -2px;
		color: #2C2C2E;
		margin-bottom 60px
	&__wrapper
		display flex
		justify-content: center
		gap: 40px
		flex-wrap: wrap
		max-width: 1040px
		margin: 0 auto 80px
	&__item
		width: 320px
		height: 169px
		background: #B7D3D4
		border-radius: 20px;
		padding: 30px 30px 35px 30px
		&-title
			max-width: 250px
			font-weight: 700;
			font-size: 24px;
			line-height: 28px;
			letter-spacing: -0.5px;
			color: #2C2C2E;
			margin-bottom: 20px
			text-align left
	&__mail
		background-color: #cee1e2
		padding: 0 10px
		border-radius: 14px
		transition: .3s
		font-weight: 600;
		font-size: 16px;
		line-height: 28px;
		color: #2C2C2E;
		display: inline-block
		margin-top: auto
		&:hover
			background-color: #fff
	&__copyright
		font-weight: 600;
		font-size: 14px;
		line-height: 14px;
		letter-spacing: -0.5px;
		color: rgba(44, 44, 46, .5);
		text-align center