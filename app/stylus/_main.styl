//main styles
.main-wrapper
	padding 0 0 0 0
	min-width $min-width
	width 100%
	position relative
	overflow hidden
	min-height 100%
	display flex
	flex-direction column
	justify-content flex-start	
	background #000

.wrapper
	min-width $min-width
	max-width $max-width
	padding 0 40px 0 40px
	margin 0 auto
	position relative

/* titles */
p
	font($base-font-size, $base-line-height, $text-color, $custom-font-family, 400)


h1
	font($font-size-h1, $line-height-h1, $title-color, $custom-font-family, 700)


h2
	font($font-size-h2, $line-height-h2, $title-color, $custom-font-family, 700)


h3
	font($font-size-h3, $line-height-h3, $title-color, $custom-font-family, 700)


/* styles */
.main
	min-width $min-width
	width 100%
	order 2
	flex-grow 1
	background: #fff
	position relative
	z-index 5
	overflow: hidden
	&__items
		max-width: 1070px
		display flex
		justify-content: space-between
		padding 220px 0 224px 0
	&__title
		font-weight: 700;
		font-size: 65px;
		line-height: 65px;
		letter-spacing: -2px;
		color: #2C2C2E;
		margin-bottom 30px
		max-width: 470px
	&__desc
		font-weight: 600;
		font-size: 16px;
		line-height: 24px;
		letter-spacing: -0.5px;
		color: rgba(44, 44, 46, .5);
		max-width: 384px
	&__pic
		max-width: 574px
		position absolute
		bottom 0
		left 2%
	&__right
		position relative
		display flex
		flex-direction: column
		align-items: left


