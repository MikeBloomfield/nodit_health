/*==========  Desktop First  ==========*/

// /* Large Devices, Wide Screens */
@media (max-width : 1200px)

    .header__wrapper
        margin: 130px auto 0
    .footer__wrapper
        flex-direction: column
        align-items: center



@media (max-width : 1100px)
    .header__pic
        right: calc(200px + 0.5 * (100% - 900px))
        width: 445px
    .main__pic
        left: calc(155px + 0.5 * (100% - 900px))
        width: 574px
    .header__wrapper 
        margin: 50px auto 0;

    .header__left
        display flex
        flex-direction: column
        align-items: left
        justify-content: center
        width: 100%
        margin auto
        max-width: 430px

    .header__title
        margin 0 auto 10px 0
        font-size 38px
        line-height 45px

    .header__desc
        margin 0 auto 25px

    .main__title
        margin: 0 auto 30px
        max-width: none
        font-size 38px
        line-height 45px
    
    .main__right
        display flex
        flex-direction: column
        align-items: center
        justify-content: left
        max-width: 430px
        margin auto

    .header
        padding-top: 55px
    .header__logo
        display block
        margin: auto
        max-width: 160px
    .header__wrapper
        flex-direction: column
        padding-bottom 440px
    .main__desc
        margin: auto
        max-width: none
    .main__items
        flex-direction: column
        align-items: center
        padding: 100px 0 644px 0
    .footer
        padding: 80px 0 80px 0

@media (max-width : 768px)


    .header__wrapper 
        margin: 50px auto 0;

    .header__left
        display flex
        flex-direction: column
        align-items: left
        justify-content: center
        width: 100%
        margin auto
        max-width: 430px

    .header__title
        margin 0 auto 10px 0
        font-size 38px
        line-height 45px

    .header__desc
        margin 0 auto 25px

    .main__title
        margin: 0 auto 30px
