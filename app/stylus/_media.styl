@media (max-width : 480px)
    .header__button
        font-size: 17px;
        line-height: 17px;

    .header__button-span
            font-size: 17px;
            line-height: 17px;
    .header
        overflow: hidden
    .header__title
        font-size: 31px;
        line-height: 33px;
        margin 0 auto 10px


    .header__desc
        font-size: 14px;
        line-height: 18px;
        margin-bottom 25px
        max-width: 278px
    .main__title
        max-width: 280px
        font-size: 35px;
        line-height: 35px;
        margin-bottom 15px


    .main__desc
        font-size: 14px;
        line-height: 18px;
        max-width 280px
    .main__right
        justify-content: center
        align-items: center
        position relative
        z-index -1

    .main
        overflow: hidden

    .footer
        padding 50px 0 50px 0
    .footer__wrapper
        margin: 0 auto 50px;
    .footer__title
        margin-top 50px
        font-size: 35px;
        line-height: 35px;
        margin-bottom 0





@media (max-width : 320px)

    .footer__item-title
        font-size 20px
    .footer__item
        width: 300px
    .header__desc
        max-width: 218px


    .header__title
        font-size 25px

        
    .main__title, .footer__title
        font-size 25px